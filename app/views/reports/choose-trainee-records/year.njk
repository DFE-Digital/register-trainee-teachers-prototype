{% extends "_templates/_form.njk" %}

{% set navActive = 'reports' %}
{% set pageHeading = "Which year are you interested in?" %}
{% set formAction = "./year-answer" %}

{% block formContent %}

<span class="govuk-caption-l">Choose trainee records to export</span>

{{ govukRadios({
  fieldset: {
    legend: {
      text: pageHeading,
      isPageHeading: true,
      classes: "govuk-fieldset__legend--l"
    }
  },
  hint: {
    text: ""
  },
  items: [
    {
      value: data.years.currentAcademicYear,
      text: "Current academic year (" + data.years.currentAcademicYear + ")"
    },
    {
      value: data.years.previousAcademicYear,
      text: "Last academic year (" + data.years.previousAcademicYear + ")"
    },
    {
      divider: "or"
    },
    {
      value: "All years",
      text: "All years"
    }
  ]
} | decorateAttributes(data, "data.reports.year")) }}


{{ govukButton({
  text: "Continue"
}) }}

{% endblock %}
