{% extends "_templates/_page.njk" %}

{% set navActive = 'bulk' %}
{% set backLink = 'false' %}

{% set filteredRecords = data.records | filterRecords(data) %}
{% set traineesThatCanBeUpdated = filteredRecords | filterByCanBulkUpdate %}

{% set traineesThatCanBeRecommended = filteredRecords | filterByReadyToRecommend %}
{% set pageHeading = "Placement data submitted" %}

{% block content %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds-from-desktop">
      {{ govukPanel({
        titleText: pageHeading,
        classes: "govuk-!-margin-bottom-7"
      }) }}

      <p class="govuk-body">
        <a href="/records" class="govuk-link">
          View your trainee records
        </a>
      </p>
      <h2 class="govuk-heading-m">
        Next steps
      </h2>
      <h3 class="govuk-heading-s">
        Trainees with incomplete records
      </h3>
      <!-- This dynamic content has been changed for MVP, hopefully implement in future -->
      <!-- {% include "_includes/bulk-update/update-individual-records.njk" %} -->
      <p class="govuk-body">
        You can complete missing placement information to the trainee record manually.
      </p>
    </div>
  </div>

{% endblock %}
