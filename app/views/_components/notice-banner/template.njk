<div class="app-notice-banner 
  {%- if params.classes %} {{ params.classes }}{% endif %}"
  aria-labelledby="app-notice-banner-title">
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds-from-desktop">
      <h2 class="app-notice-banner__title" id="app-notice-banner-title">
        {{ params.titleHtml | safe if params.titleHtml else params.titleText }}
      </h2>
      <div class="app-notice-banner__body">
        <ul class="govuk-list app-notice-banner__list">
          {% for item in params.itemList %}
            <li>
              {% if item.html %}
                {{ item.html | safe}}
              {% else %}
                <a class="app-notice-banner" href="{{ item.href }}">{{ item.text }}</a>
              {% endif %}
            </li>
          {% endfor %}
        </ul>
      </div>
    </div>
  </div>
</div>
