{
  "name": "register-trainee-teachers-prototype",
  "description": "Prototype for a ‘Register trainee teachers’ service",
  "engines": {
    "node": "22.x"
  },
  "scripts": {
    "db:build": "npm run db:migrate && npm run db:seed",
    "db:build:dev": "rm -f app/database/development.sqlite3 && npm run db:build",
    "db:migrate": "npx sequelize db:migrate --migrations-path ./app/migrations --config ./app/config/config.json",
    "db:seed": "npx sequelize db:seed:all --seeders-path ./app/seeders --config ./app/config/config.json",
    "postinstall": "npm run db:build",
    "dev": "govuk-prototype-kit dev",
    "serve": "govuk-prototype-kit serve",
    "start": "govuk-prototype-kit start",
    "lint:md": "markdownlint --config .markdownlintrc 'app/views/docs/**/*.md'",
    "lint:md:fix": "markdownlint --config .markdownlintrc --fix 'app/views/docs/**/*.md'",
    "lint": "npm run lint:md",
    "lint:fix": "npm run lint:md:fix"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "connect-flash": "^0.1.1",
    "dotenv": "^17.2.4",
    "express-session": "^1.19.0",
    "govuk-frontend": "^5.14.0",
    "govuk-prototype-kit": "^13.18.1",
    "gray-matter": "^4.0.3",
    "inflection": "^3.0.2",
    "luxon": "^3.7.2",
    "marked": "^17.0.1",
    "marked-gfm-heading-id": "^4.1.3",
    "numeral": "^2.0.6",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "sequelize": "^6.37.7",
    "sequelize-cli": "^6.6.5",
    "sqlite3": "^5.1.7",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "markdownlint-cli": "^0.47.0"
  }
}
