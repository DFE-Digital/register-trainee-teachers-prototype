
<p class="govuk-body">You need to enter:</p>

<ul class="govuk-list govuk-list--bullet">
  {% if record | needsPlacementDetails %}
    <li>
      <a href='{{ recordPath + "/placements/confirm" | addReferrer(referrer) }}' class="govuk-link">placement details</a>
    </li>
  {% endif %}
  
  {% if not record.trainingDetails.commencementDate | length > 0 %}
    <li>
      <a href='{{ recordPath + "/trainee-start-date" | addReferrer(referrer) }}' class="govuk-link">trainee start date</a>
    </li>
  {% endif %}
</ul>
