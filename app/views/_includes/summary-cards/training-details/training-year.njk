{% set recordBaseRows = [
  {
    key: {
      text: "Training year"
    },
    value: {
      text: record.academicYear or 'Not provided'
    },
    actions: {
      items: [
        {
          href: recordPath + "/training-year" | addReferrer(referrer),
          text: "Change",
          visuallyHiddenText: "training year"
        }
      ]
    } if canAmend
  }
] %}

{% set recordBaseHtml %}
  {{ govukSummaryList({
    rows: recordBaseRows
  }) }}
{% endset %}

{{ appSummaryCard({
  classes: "govuk-!-margin-bottom-6",
  titleText: "Training year",
  html: recordBaseHtml
}) }}
