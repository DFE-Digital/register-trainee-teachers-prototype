{% extends "_templates/_record-form.njk" %}
{% set pageHeading = "Check " + (data.record | getQualificationText) + " details" %}

{% set backLink = ("/record/" + data.record.id) | orReferrer(referrer) %}
{% set backText = "Back to record" %}

{% set gridColumn = 'govuk-grid-column-full' %}
{% set formAction = "./update" %}

{% block formContent %}
  {% include "_includes/trainee-name-caption.njk" %}
  <h1 class="govuk-heading-l">
    {{pageHeading}}
  </h1>
  {% include "_includes/summary-cards/qualification-details.njk" %}

  <p class="govuk-body">This data will be shared with the Database of Qualified Teachers (DQT).</p>

  {{ govukButton({
    text: "Update record"
  }) }}

{% endblock %}
