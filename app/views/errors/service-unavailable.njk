{% extends "layout.njk" %}
{% set hideNav = true %}
{% set hidePrimaryNav = true %}

{% set pageHeading = "This service is temporarily unavailable" %}

{% block pageTitle %}
  {{ pageHeading }} - {{serviceName}} - GOV.UK
{% endblock %}

{% block content %}

<div class="govuk-grid-row">

  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-l">{{pageHeading}}</h1>

    <p class="govuk-body">
